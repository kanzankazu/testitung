<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolBarStyle">
        <item name="android:textColor">@color/White</item>
        <item name="actionMenuTextColor">@color/White</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextSubtitleStyle">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/navy_blue</item>
        <item name="android:fontFamily">@font/avenir_next_ltpro_demi</item>
    </style>

    <style name="TextLabelStyle">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/color_label_guideline_otomoto</item>
        <item name="android:fontFamily">@font/avenir_next_ltpro_medium</item>
    </style>

    <style name="TextMenuStyle">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:fontFamily">@font/avenir_next_ltpro_medium</item>
    </style>

    <style name="TextTitleStyle">
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@color/navy_blue</item>
        <item name="android:fontFamily">@font/avenir_next_ltpro_demi</item>
    </style>

    <style name="TextFormStyle">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/navy_blue</item>
        <item name="android:fontFamily">@font/avenir_next_ltpro_medium</item>
        <item name="android:textColorHint">@color/color_hint_guideline_otomoto</item>
    </style>

    <style name="BlueButton">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/navy_blue</item>
        <item name="android:fontFamily">@font/avenir_next_ltpro_medium</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="WhiteButton">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/navy_blue</item>
        <item name="android:fontFamily">@font/avenir_next_ltpro_medium</item>
        <item name="android:background">@drawable/button_grey_selector</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextDescriptionStyle">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/color_desc_guideline_otomoto</item>
        <item name="android:fontFamily">@font/avenir_next_ltpro_regular</item>
    </style>

    <!--Kanzan-->
    <style name="TvBottomButtonPrimary">
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:fontFamily">@font/avenir_next_ltpro_demi</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/padding_margin_20dp</item>
    </style>

    <style name="TvBottomButtonPrimaryDark">
        <item name="android:background">@drawable/button_selector_dark</item>
        <item name="android:fontFamily">@font/avenir_next_ltpro_demi</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/padding_margin_20dp</item>
    </style>

    <style name="TvButtonPrimaryDark">
        <item name="android:background">@drawable/button_selector_dark</item>
        <item name="android:fontFamily">@font/avenir_next_ltpro_demi</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/padding_margin_20dp</item>
    </style>

    <style name="TvButtonGoogle">
        <item name="android:background">@drawable/google_button_selector</item>
        <item name="android:fontFamily">@font/avenir_next_ltpro_demi</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/padding_margin_20dp</item>
    </style>

    <style name="TvButtonFacebook">
        <item name="android:background">@drawable/facebook_button_selector</item>
        <item name="android:fontFamily">@font/avenir_next_ltpro_demi</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/padding_margin_20dp</item>
    </style>

    <style name="TvStandart">
        <item name="android:fontFamily">@font/avenir_next_ltpro_demi</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="TvStandartCenter" parent="TvStandart">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TvStandartCenterSingle" parent="TvStandartCenter">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TvStandartCenterMarquee" parent="TvStandartCenter">
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>

    <style name="EtText" parent="TvStandart">
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EtText.Email" parent="TvStandart">
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EtText.Password" parent="TvStandart">
        <item name="android:inputType">textPassword</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EtTextDisable" parent="TvStandart">
        <item name="android:enabled">false</item>
        <item name="android:clickable">false</item>
        <item name="android:inputType">text</item>
        <item name="android:focusable">false</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EtTextNonEditable" parent="TvStandart">
        <item name="android:editable">false</item>
        <item name="android:inputType">none</item>
        <item name="android:focusable">false</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EtNumber" parent="TvStandart">
        <item name="android:inputType">number</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EtClickable" parent="TvStandart">
        <item name="android:inputType">none</item>
        <item name="android:focusable">false</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EtMultiline" parent="TvStandart">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:lineSpacingExtra">@dimen/padding_margin_5dp</item>
    </style>

</resources>
