<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolBarStyle">
        <item name="android:textColor">@color/White</item>
        <item name="actionMenuTextColor">@color/White</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextSubtitleStyle">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/navy_blue</item>
        <item name="android:fontFamily">@font/avenir_next_ltpro_demi</item>
    </style>

    <style name="TextLabelStyle">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/color_label_guideline_otomoto</item>
        <item name="android:fontFamily">@font/avenir_next_ltpro_medium</item>
    </style>

    <style name="TextMenuStyle">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:fontFamily">@font/avenir_next_ltpro_medium</item>
    </style>

    <style name="TextTitleStyle">
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@color/navy_blue</item>
        <item name="android:fontFamily">@font/avenir_next_ltpro_demi</item>
    </style>

    <style name="TextFormStyle">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/navy_blue</item>
        <item name="android:fontFamily">@font/avenir_next_ltpro_medium</item>
        <item name="android:textColorHint">@color/color_hint_guideline_otomoto</item>
    </style>

    <style name="BlueButton">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/navy_blue</item>
        <item name="android:fontFamily">@font/avenir_next_ltpro_medium</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="WhiteButton">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/navy_blue</item>
        <item name="android:fontFamily">@font/avenir_next_ltpro_medium</item>
        <item name="android:background">@drawable/button_selector_grey</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextDescriptionStyle">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/color_desc_guideline_otomoto</item>
        <item name="android:fontFamily">@font/avenir_next_ltpro_regular</item>
    </style>

</resources>
