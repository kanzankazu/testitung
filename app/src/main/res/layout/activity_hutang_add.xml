<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/app_toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:animateLayoutChanges="true"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:padding="@dimen/padding_margin_16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_margin_5dp"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_margin_5dp"
                    android:fontFamily="@font/avenir_next_ltpro_demi"
                    android:text="Hutang Teruntuk : "
                    android:textColor="@color/Black" />

                <RadioGroup
                    android:id="@+id/rg_hutang_add_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_hutang_add_hutang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/red"
                        android:fontFamily="@font/avenir_next_ltpro_demi"
                        android:text="Saya Hutang"
                        android:textColor="@color/red" />

                    <RadioButton
                        android:id="@+id/rb_hutang_add_piutang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/green"
                        android:fontFamily="@font/avenir_next_ltpro_demi"
                        android:text="Dia Hutang"
                        android:textColor="@color/green" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginBottom="@dimen/padding_margin_5dp"
                android:animateLayoutChanges="true"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/padding_margin_5dp"
                    android:fontFamily="@font/avenir_next_ltpro_demi"
                    android:gravity="center_vertical"
                    android:text="Undang : "
                    android:textColor="@color/Black" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_hutang_add_user"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/padding_margin_5dp"
                    android:layout_weight="1">

                    <AutoCompleteTextView
                        android:id="@+id/actv_hutang_add_user"
                        style="@style/EtText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Email / No.Telp"
                        android:imeOptions="actionNext" />
                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:id="@+id/iv_hutang_add_user"
                    style="@style/TvBottomButtonPrimary"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="match_parent"
                    android:padding="@dimen/padding_margin_16dp"
                    android:src="@drawable/ic_add_user" />

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_hutang_add_nominal"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_margin_5dp">

                <com.kanzankazu.itungitungan.util.widget.view.CurrencyEditText
                    android:id="@+id/et_hutang_add_nominal"
                    style="@style/EtNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nominal Rp. : *"
                    android:imeOptions="actionNext" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_hutang_add_desc"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_margin_5dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_hutang_add_desc"
                    style="@style/EtMultiline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Keperluan *"
                    android:imeOptions="actionNext" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_hutang_add_note"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_margin_5dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_hutang_add_note"
                    style="@style/EtMultiline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Catatan"
                    android:imeOptions="actionNext" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_margin_5dp"
                android:animateLayoutChanges="true"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_hutang_add_date"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_hutang_add_date"
                        style="@style/EtClickable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_calendar"
                        android:hint="Tanggal Meminjam *" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_hutang_add_due_date"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_hutang_add_due_date"
                        style="@style/EtClickable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_calendar"
                        android:hint="Jatuh Tempo" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_hutang_add_installment"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_margin_5dp"
                android:animateLayoutChanges="true"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_hutang_add_price_installment"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <com.kanzankazu.itungitungan.util.widget.view.CurrencyEditText
                        android:id="@+id/et_hutang_add_price_installment"
                        style="@style/EtNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nominal Cicilan"
                        android:imeOptions="actionNext" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_hutang_add_installment"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_hutang_add_installment"
                        style="@style/EtNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Berapa x Cicilan"
                        android:imeOptions="actionDone" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_margin_5dp"
                    android:fontFamily="@font/avenir_next_ltpro_demi"
                    android:text="Upload foto bukti : "
                    android:textColor="@color/Black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center|top"
                        android:background="@drawable/round">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/civ_hutang_add_bukti1"
                            android:layout_width="@dimen/padding_margin_90dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_profile_picture" />

                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center|top"
                        android:layout_marginRight="@dimen/padding_margin_5dp"
                        android:background="@drawable/round">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/civ_hutang_add_bukti2"
                            android:layout_width="@dimen/padding_margin_90dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_profile_picture" />

                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center|top"
                        android:layout_marginRight="@dimen/padding_margin_5dp"
                        android:background="@drawable/round">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/civ_hutang_add_bukti3"
                            android:layout_width="@dimen/padding_margin_90dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_profile_picture" />

                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

    <TextView
        android:id="@+id/tv_hutang_add_simpan"
        style="@style/TvBottomButtonPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:text="SIMPAN" />
</LinearLayout>

