<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/padding_margin_8dp">

    <FrameLayout
        android:layout_width="@dimen/padding_margin_50dp"
        android:layout_height="@dimen/padding_margin_50dp"
        android:layout_gravity="center|top"
        android:layout_marginEnd="@dimen/padding_margin_5dp"
        android:background="@drawable/round">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_item_inbox_photo"
            android:layout_width="@dimen/padding_margin_40dp"
            android:layout_height="@dimen/padding_margin_50dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_profile" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/padding_margin_5dp"
            android:layout_weight="1"
            android:animateLayoutChanges="true"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_margin_5dp"
                android:animateLayoutChanges="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_inbox_name"
                    style="@style/TvStandart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_margin_10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/medium_font_size"
                    tools:text="@tools:sample/first_names" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir_next_ltpro_demi"
                    android:text="1 min"
                    android:textColor="@color/gray_light"
                    android:visibility="invisible" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_item_inbox_isi"
                style="@style/TvStandartMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@tools:sample/lorem[10]" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/padding_margin_5dp"
            android:background="@color/colorAccent" />

        <LinearLayout
            android:layout_width="@dimen/padding_margin_50dp"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_inbox_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_margin_5dp"
                android:fontFamily="@font/avenir_next_ltpro_demi"
                android:gravity="end"
                android:text="+ 6 m" />

            <ImageView
                android:id="@+id/iv_item_inbox_new"
                android:layout_width="@dimen/padding_margin_15dp"
                android:layout_height="@dimen/padding_margin_15dp"
                android:layout_marginBottom="@dimen/padding_margin_5dp"
                android:src="@drawable/round" />

            <TextView
                android:id="@+id/tv_item_inbox_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_next_ltpro_demi"
                android:gravity="right"
                android:text="1"
                android:textColor="@color/red"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>