<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <include layout="@layout/app_toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:animateLayoutChanges="true"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:padding="@dimen/padding_margin_16dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_margin_10dp"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical">

                <RadioGroup
                        android:id="@+id/rg_perhutungan_add_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                    <RadioButton
                            android:id="@+id/rb_perhutungan_add_keluar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:buttonTint="@color/red"
                            android:fontFamily="@font/avenir_next_ltpro_demi"
                            android:text="Pengeluaran"
                            android:textColor="@color/red" />

                    <RadioButton
                            android:id="@+id/rb_perhutungan_add_masuk"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:buttonTint="@color/green"
                            android:fontFamily="@font/avenir_next_ltpro_demi"
                            android:text="Pemasukan"
                            android:textColor="@color/green" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_margin_10dp"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/avenir_next_ltpro_bold"
                    android:gravity="center_vertical"
                    android:text="Option Utama : "
                    android:textColor="@color/Black" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_perhitungan_add_date"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_margin_5dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_perhitungan_add_date"
                        style="@style/EtClickable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_calendar"
                        android:hint="Tanggal Sekarang" />
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_margin_5dp"
                    android:animateLayoutChanges="true"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_perhitungan_add_kategory"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_perhitungan_add_kategory"
                            style="@style/EtClickable"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@drawable/ic_list"
                            android:hint="Kategori" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_perhitungan_add_sub_kategory"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_perhitungan_add_sub_kategory"
                            style="@style/EtClickable"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@drawable/ic_list"
                            android:hint="Sub Kategori" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_perhitungan_add_nominal"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.kanzankazu.itungitungan.util.widget.view.CurrencyEditText
                        android:id="@+id/et_perhitungan_add_nominal"
                        style="@style/EtNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nominal" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_margin_10dp"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/avenir_next_ltpro_bold"
                    android:gravity="center_vertical"
                    android:text="Option Barang : "
                    android:textColor="@color/Black" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_perhitungan_add_nama_barang"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_margin_5dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_perhitungan_add_nama_barang"
                        style="@style/EtText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nama Barang" />
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_perhitungan_add_quantity"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/padding_margin_5dp"
                        android:layout_weight="1">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_perhitungan_add_quantity"
                            style="@style/EtNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Quantity Barang" />
                    </android.support.design.widget.TextInputLayout>

                    <Spinner
                        android:id="@+id/sp_perhitungan_add_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_margin_10dp"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/padding_margin_5dp"
                    android:fontFamily="@font/avenir_next_ltpro_bold"
                    android:gravity="center_vertical"
                    android:text="Option Lain - lain: "
                    android:textColor="@color/Black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_margin_5dp"
                    android:animateLayoutChanges="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/padding_margin_5dp"
                        android:layout_weight="1"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/avenir_next_ltpro_demi"
                            android:gravity="center"
                            android:text="Tambahkan teman / keluarga: "
                            android:textColor="@color/Black" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/til_perhitungan_add_user"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <AutoCompleteTextView
                                android:id="@+id/tv_perhitungan_add_user"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                style="@style/EtText"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_perhitungan_add_user"
                        style="@style/TvButtonPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/padding_margin_16dp"
                        android:src="@drawable/ic_add_user" />

                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_perhitungan_add_note"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_perhitungan_add_note"
                        style="@style/EtMultiline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Catatan" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_margin_5dp"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/avenir_next_ltpro_bold"
                    android:gravity="center_vertical"
                    android:text="Option Pembayaran: "
                    android:textColor="@color/Black" />

                <RadioGroup
                    android:id="@+id/rg_perhitungan_add_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/red"
                        android:fontFamily="@font/avenir_next_ltpro_demi"
                        android:text="Tunai"
                        android:textColor="@color/red" />

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/green"
                        android:fontFamily="@font/avenir_next_ltpro_demi"
                        android:text="Non Tunai"
                        android:textColor="@color/green" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_perhitungan_add_non_tunai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_margin_10dp"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_perhitungan_add_due_date"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_margin_5dp"
                    android:layout_weight="1">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_perhitungan_add_due_date"
                        style="@style/EtClickable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_calendar"
                        android:hint="Jatuh Tempo" />
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_margin_10dp"
                    android:animateLayoutChanges="true"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_perhitungan_add_price_installment"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <com.kanzankazu.itungitungan.util.widget.view.CurrencyEditText
                            android:id="@+id/et_perhitungan_add_price_installment"
                            style="@style/EtNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nominal Cicilan" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_perhitungan_add_installment"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_perhitungan_add_installment"
                            style="@style/EtNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Berapa x Cicilan" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <TextView
        android:id="@+id/tv_perhitungan_add_simpan"
        style="@style/TvButtonPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:text="SIMPAN" />
</LinearLayout>

