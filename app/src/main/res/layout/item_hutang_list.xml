<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_margin_5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_item_hutang_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_margin_5dp">

                <ImageView
                    android:id="@+id/iv_item_hutang_list_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/padding_margin_10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:animateLayoutChanges="true"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/padding_margin_5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_hutang_list_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/avenir_next_ltpro_demi"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/normal_font_size"
                            tools:text="@tools:sample/full_names" />

                        <ImageView
                            android:id="@+id/iv_hutang_list_is_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_photo"
                            android:tint="@color/colorPrimaryDark"
                            android:visibility="gone" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_hutang_list_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/padding_margin_5dp"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:fontFamily="@font/avenir_next_ltpro_demi"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:textSize="@dimen/small_font_size"
                        tools:text="@tools:sample/cities" />

                    <TextView
                        android:id="@+id/tv_hutang_list_keperluan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/padding_margin_5dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/avenir_next_ltpro_demi"
                        android:maxLines="2"
                        android:textSize="@dimen/mini_font_size"
                        tools:text="@tools:sample/lorem" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:id="@+id/cv_item_hutang_list_apprv_penghutang"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/padding_margin_5dp"
                            android:visibility="gone"
                            app:cardBackgroundColor="@color/colorPrimaryDark"
                            app:cardCornerRadius="@dimen/padding_margin_5dp">

                            <TextView
                                android:id="@+id/tv_item_hutang_list_apprv_penghutang"
                                style="@style/TvStandartCenter"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/padding_margin_5dp"
                                android:gravity="center"
                                android:text="Persetujuan Penghutang"
                                android:textAllCaps="true"
                                android:textColor="@color/Black"
                                android:textSize="@dimen/super_mini_font_size" />
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/cv_item_hutang_list_apprv_piutang"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/padding_margin_5dp"
                            android:visibility="gone"
                            app:cardBackgroundColor="@color/red"
                            app:cardCornerRadius="@dimen/padding_margin_5dp">

                            <TextView
                                android:id="@+id/tv_item_hutang_list_apprv_piutang"
                                style="@style/TvStandartCenter"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/padding_margin_5dp"
                                android:gravity="center"
                                android:text="Persetujuan Piutang"
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                android:textSize="@dimen/super_mini_font_size" />
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/cv_item_hutang_list_apprv_none"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:cardBackgroundColor="@color/green"
                            app:cardCornerRadius="@dimen/padding_margin_5dp">

                            <TextView
                                android:id="@+id/tv_item_hutang_list_apprv_none"
                                style="@style/TvStandartCenter"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/padding_margin_5dp"
                                android:gravity="center"
                                android:text="Tanpa Persetujuan"
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                android:textSize="@dimen/super_mini_font_size" />
                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_hutang_list_nominal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/padding_margin_5dp"
                        android:layout_weight="1.5"
                        android:fontFamily="@font/avenir_next_ltpro_bold"
                        android:gravity="center"
                        android:text="Rp 0"
                        android:textColor="@color/green"
                        android:textSize="@dimen/normal_font_size" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/cv_item_hutang_list_installment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginBottom="@dimen/padding_margin_2dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:animateLayoutChanges="true"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_hutang_list_nominal_installment_count"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="@dimen/padding_margin_5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/avenir_next_ltpro_bold"
                                android:gravity="center"
                                android:text="1 x Cicilan"
                                android:textColor="@color/green"
                                android:textSize="@dimen/small_font_size" />

                            <TextView
                                android:id="@+id/tv_hutang_list_nominal_installment_nominal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/avenir_next_ltpro_bold"
                                android:gravity="center"
                                android:text="Rp 0"
                                android:textSize="@dimen/small_font_size" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:id="@+id/tv_hutang_list_nominal_installment_due_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:fontFamily="@font/avenir_next_ltpro_bold"
                        android:gravity="center"
                        android:text="Tanggal Jatuh Tempo"
                        android:textSize="@dimen/mini_font_size" />
                </LinearLayout>


            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/padding_margin_50dp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="@dimen/padding_margin_25dp">

                <TextView
                    style="@style/TvStandartCenter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/padding_margin_5dp"
                    android:gravity="center"
                    android:text="LUNAS"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/padding_margin_30dp" />
            </android.support.v7.widget.CardView>


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>


