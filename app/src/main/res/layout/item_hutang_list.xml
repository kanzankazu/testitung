<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_margin_2dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_margin_5dp">

        <ImageView
            android:id="@+id/iv_item_hutang_list_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="@dimen/padding_margin_10dp"
            android:src="@drawable/ic_profile_picture" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:animateLayoutChanges="true"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_hutang_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_margin_5dp"
                android:fontFamily="@font/avenir_next_ltpro_demi"
                android:textSize="@dimen/padding_margin_20dp"
                tools:text="@tools:sample/full_names" />

            <TextView
                android:id="@+id/tv_hutang_list_transaksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_next_ltpro_demi"
                android:text="3 Transaksi" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_hutang_list_nominal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/avenir_next_ltpro_bold"
            android:gravity="center"
            android:text="500.000"
            android:textColor="@color/green"
            android:textSize="@dimen/padding_margin_20dp" />

    </LinearLayout>
</android.support.v7.widget.CardView>
