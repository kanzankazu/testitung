<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/round_corner_bottom">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_margin_50dp"
            android:fontFamily="@font/avenir_next_ltpro_demi"
            android:text="Profile"
            android:textSize="@dimen/padding_margin_25dp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_margin_20dp"
        android:layout_marginTop="-190dp"
        android:layout_marginRight="@dimen/padding_margin_20dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_margin_50dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/padding_margin_10dp"
                    android:layout_marginBottom="@dimen/padding_margin_10dp"
                    android:animateLayoutChanges="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_margin_10dp"
                        android:src="@drawable/ic_home" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_margin_10dp"
                        android:src="@drawable/ic_home" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_margin_10dp"
                    android:fontFamily="@font/avenir_next_ltpro_demi"
                    android:gravity="center_horizontal"
                    android:text="@string/app_name"
                    android:textSize="@dimen/padding_margin_25dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_margin_10dp"
                    android:fontFamily="@font/avenir_next_ltpro_medium"
                    android:gravity="center_horizontal"
                    android:text="@string/app_name" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/padding_margin_10dp"
                    android:background="@color/colorPrimary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_margin_10dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_margin_10dp">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/padding_margin_10dp"
                        android:layout_weight="7"
                        android:background="?android:selectableItemBackground"
                        android:src="@drawable/ic_back_black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/padding_margin_10dp"
                        android:layout_weight="1"

                        android:fontFamily="@font/avenir_next_ltpro_demi"

                        android:gravity="center_vertical"
                        android:text="@string/app_name" />

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:background="?android:selectableItemBackground"
                        android:src="@drawable/ic_back_black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_margin_10dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_margin_10dp">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/padding_margin_10dp"
                        android:layout_weight="7"
                        android:background="?android:selectableItemBackground"
                        android:src="@drawable/ic_back_black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/padding_margin_10dp"
                        android:layout_weight="1"

                        android:fontFamily="@font/avenir_next_ltpro_demi"

                        android:gravity="center_vertical"
                        android:text="@string/app_name" />

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:background="?android:selectableItemBackground"
                        android:src="@drawable/ic_back_black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_margin_10dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_margin_10dp">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/padding_margin_10dp"
                        android:layout_weight="7"
                        android:background="?android:selectableItemBackground"
                        android:src="@drawable/ic_back_black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/padding_margin_10dp"
                        android:layout_weight="1"

                        android:fontFamily="@font/avenir_next_ltpro_demi"

                        android:gravity="center_vertical"
                        android:text="@string/app_name" />

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:background="?android:selectableItemBackground"
                        android:src="@drawable/ic_back_black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_margin_10dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_margin_10dp">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/padding_margin_10dp"
                        android:layout_weight="7"
                        android:background="?android:selectableItemBackground"
                        android:src="@drawable/ic_back_black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/padding_margin_10dp"
                        android:layout_weight="1"

                        android:fontFamily="@font/avenir_next_ltpro_demi"

                        android:gravity="center_vertical"
                        android:text="@string/app_name" />

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:background="?android:selectableItemBackground"
                        android:src="@drawable/ic_back_black" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center|top"
            android:background="@drawable/round">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/padding_margin_90dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_profile_picture" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_edit_profile_photo"
                android:visibility="gone" />
        </FrameLayout>

    </FrameLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_margin_20dp"
        android:layout_marginTop="@dimen/padding_margin_10dp"
        android:layout_marginRight="@dimen/padding_margin_20dp"
        android:layout_marginBottom="@dimen/padding_margin_10dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_margin_10dp">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/padding_margin_10dp"
                android:layout_weight="7"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/ic_back_black"
                android:tint="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/padding_margin_10dp"
                android:layout_weight="1"
                android:fontFamily="@font/avenir_next_ltpro_demi"
                android:gravity="center_vertical"
                android:text="@string/app_name"
                android:textColor="@color/white" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>