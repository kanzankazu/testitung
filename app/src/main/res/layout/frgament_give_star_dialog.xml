<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/padding_margin_8dp"
    app:cardElevation="@dimen/padding_margin_8dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/padding_margin_16dp">

            <ImageView
                android:id="@+id/iv_give_star_idea_idea"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_margin_200dp"
                android:layout_marginBottom="@dimen/padding_margin_8dp"
                android:src="@mipmap/ic_launcher"
                android:visibility="gone"
                tools:visibility="visible" />

            <LinearLayout
                android:id="@+id/ll_give_star_idea_star"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_margin_8dp"
                android:animateLayoutChanges="true"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    style="@style/TvStandartMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_margin_8dp"
                    android:gravity="center"
                    android:text="Berikan tanggapan anda aplikasi ini !!!" />

                <RatingBar
                    android:id="@+id/rb_give_star_idea_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_margin_8dp"
                    android:numStars="5"
                    android:stepSize="1.0" />

                <TextView
                    android:id="@+id/tv_give_star_idea_star_result"
                    style="@style/TvStandart"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_margin_30dp"
                    android:gravity="center"
                    android:textAllCaps="true"
                    tools:text="@tools:sample/lorem" />
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_give_star_idea_note"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:helperText="Jika menurut anda aplikasi ada error / kirik / saran untuk aplikasi ini, jangan sungkan memberitahu kami. Kami akan menerima dengan senang hati dan kami akan memfollowup masukan anda."
                tools:visibility="visible">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_give_star_idea_note"
                    style="@style/EtMultiline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:hint="Masukan kritik dan saran anda"
                    android:minLines="3" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/padding_margin_8dp"
            android:background="@color/gray_very_light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_margin_8dp"
            android:animateLayoutChanges="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_give_star_idea_close"
                style="@style/TvStandart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_margin_30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/confirm_close"
                android:textAllCaps="true"
                android:textColor="@color/gray_very_light" />

            <TextView
                android:id="@+id/tv_give_star_idea_send"
                style="@style/TvStandart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_margin_30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/confirm_send"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>