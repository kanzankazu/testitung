<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/padding_margin_8dp"
    app:cardElevation="@dimen/padding_margin_8dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/padding_margin_16dp">

            <TextView
                style="@style/TvStandartMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_margin_8dp"
                android:gravity="center"
                android:text="Berikan tanggapan anda aplikasi ini !!!" />

            <RatingBar
                android:id="@+id/rb_give_star_donate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_margin_8dp"
                android:numStars="5"
                android:stepSize="1.0" />

            <TextView
                android:id="@+id/tv_give_star_result"
                style="@style/TvStandart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_margin_30dp"
                android:gravity="center"
                android:textAllCaps="true"
                tools:text="@tools:sample/lorem" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/padding_margin_8dp"
            android:background="@color/gray_very_light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_margin_8dp"
            android:animateLayoutChanges="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_give_star_close"
                style="@style/TvStandart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_margin_30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/confirm_close"
                android:textAllCaps="true"
                android:textColor="@color/gray_very_light" />

            <TextView
                android:id="@+id/tv_give_star_send"
                style="@style/TvStandart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_margin_30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/confirm_send"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>