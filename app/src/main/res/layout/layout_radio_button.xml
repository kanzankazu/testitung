<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_margin_16dp"
        android:paddingLeft="@dimen/padding_margin_16dp"
        android:paddingRight="@dimen/padding_margin_16dp"
        android:layout_marginLeft="@dimen/padding_margin_16dp"
        android:layout_marginRight="@dimen/padding_margin_16dp">

        <RadioButton
            android:paddingLeft="@dimen/padding_margin_8dp"
            android:paddingTop="@dimen/padding_margin_8dp"
            android:paddingBottom="@dimen/padding_margin_8dp"
            android:layout_marginBottom="@dimen/padding_margin_8dp"
            android:id="@+id/custom_rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="asdas"
            style="@style/TextLabelStyle"
            android:gravity="center_vertical"
            android:layout_gravity="start"/>

        <RadioButton
            android:id="@+id/custom_rb_text_only"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@android:color/transparent"
            android:paddingLeft="@dimen/padding_margin_40dp"
            android:paddingTop="@dimen/padding_margin_8dp"
            android:paddingBottom="@dimen/padding_margin_8dp"
            android:layout_marginBottom="@dimen/padding_margin_8dp"
            style="@style/TextLabelStyle"
            android:visibility="gone"/>

    </LinearLayout>
</LinearLayout>