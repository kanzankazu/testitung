<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/v_item_option_line_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"
        android:visibility="gone"
        tools:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/padding_margin_8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/padding_margin_60dp"
            android:layout_height="@dimen/padding_margin_60dp"
            tools:src="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_margin_16dp"
            android:layout_weight="1"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_option_title"
                style="@style/TvStandartCenter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:ellipsize="end"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/large_font_size"
                tools:text="@tools:sample/lorem" />

            <TextView
                android:id="@+id/tv_item_option_description"
                style="@style/TvStandartCenter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_margin_5dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/avenir_next_ltpro_medium"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textAllCaps="true"
                android:textSize="@dimen/normal_font_size"
                android:visibility="gone"
                tools:text="@tools:sample/lorem"
                tools:visibility="visible" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_margin_16dp"
            android:background="@drawable/shape_round_rect_border"
            android:paddingLeft="@dimen/padding_margin_20dp"
            android:paddingTop="@dimen/padding_margin_10dp"
            android:paddingRight="@dimen/padding_margin_20dp"
            android:paddingBottom="@dimen/padding_margin_10dp"
            android:text="Salin"
            android:textAllCaps="true"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:id="@+id/v_item_option_line_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"
        android:visibility="gone"
        tools:visibility="visible" />
</LinearLayout>
