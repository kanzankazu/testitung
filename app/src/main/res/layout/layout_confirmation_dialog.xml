<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_confirmation_text"
            style="@style/TextSubtitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_margin_16dp"
            android:layout_marginTop="@dimen/padding_margin_16dp"
            android:layout_marginRight="@dimen/padding_margin_16dp"
            android:text="TITLE" />

        <TextView
            android:id="@+id/tv_confirmation_description"
            style="@style/TextMenuStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_confirmation_text"
            android:layout_marginLeft="@dimen/padding_margin_16dp"
            android:layout_marginTop="@dimen/padding_margin_8dp"
            android:layout_marginRight="@dimen/padding_margin_16dp"
            android:text="Description" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_confirmation_description"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/padding_margin_16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_close_dialog"
                style="@style/TextMenuStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_margin_8dp"
                android:layout_marginRight="@dimen/padding_margin_8dp"
                android:layout_marginBottom="@dimen/padding_margin_8dp"
                android:background="@drawable/text_selector_popup"
                android:clickable="true"
                android:paddingLeft="@dimen/padding_margin_10dp"
                android:paddingTop="@dimen/padding_margin_10dp"
                android:paddingRight="@dimen/padding_margin_10dp"
                android:paddingBottom="@dimen/padding_margin_10dp"
                android:text="TIDAK"
                android:textColor="@color/cyan" />

            <TextView
                android:id="@+id/btn_close_dialog_OK"
                style="@style/TextMenuStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_margin_8dp"
                android:layout_marginRight="@dimen/padding_margin_8dp"
                android:layout_marginBottom="@dimen/padding_margin_8dp"
                android:background="@drawable/text_selector_popup"
                android:clickable="true"
                android:paddingLeft="@dimen/padding_margin_10dp"
                android:paddingTop="@dimen/padding_margin_10dp"
                android:paddingRight="@dimen/padding_margin_10dp"
                android:paddingBottom="@dimen/padding_margin_10dp"
                android:text="YA"
                android:textColor="@color/cyan" />

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>