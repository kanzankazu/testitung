<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kanzankazu.itungitungan.view.main.ProfileSub.AboutActivity">

    <include layout="@layout/app_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_margin_16dp"
        android:paddingTop="@dimen/padding_margin_16dp"
        android:paddingRight="@dimen/padding_margin_16dp">

        <ImageView
            android:layout_width="@dimen/padding_margin_150dp"
            android:layout_height="@dimen/padding_margin_150dp"
            android:layout_marginBottom="@dimen/padding_margin_8dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_about_app_name"
            style="@style/TvStandartCenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_margin_8dp"
            android:text="@string/app_name"
            android:textSize="@dimen/Big_font_size" />

        <TextView
            android:id="@+id/tv_about_app_version"
            style="@style/TvStandartCenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_margin_8dp"
            android:textSize="@dimen/Big_font_size" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_about"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:itemCount="50"
            tools:listitem="@layout/item_title_desc_icon_option" />
    </LinearLayout>

</LinearLayout>
