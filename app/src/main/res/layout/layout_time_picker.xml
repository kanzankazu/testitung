<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/padding_margin_24dp"
        android:layout_marginRight="@dimen/padding_margin_24dp"
        android:layout_marginTop="@dimen/padding_margin_24dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextDescriptionStyle"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/padding_margin_20dp"
            android:text="Cari waktu"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rg_time" />

        <TimePicker
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/time_picker"
            android:timePickerMode="spinner"
            android:descendantFocusability="blocksDescendants"
            android:visibility="gone"></TimePicker>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_margin_32dp"
            android:layout_marginRight="@dimen/padding_margin_8dp"
            android:layout_marginBottom="@dimen/padding_margin_8dp"
            android:layout_marginLeft="@dimen/padding_margin_8dp"
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/padding_margin_36dp"
                android:text="BATAL"
                android:gravity="center"
                android:padding="@dimen/padding_margin_8dp"
                android:textColor="@color/color_black_55_percent"
                android:textSize="@dimen/padding_margin_16dp"
                android:id="@+id/btn_cancel"
                android:layout_marginRight="@dimen/padding_margin_8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/padding_margin_36dp"
                android:text="OK"
                android:padding="@dimen/padding_margin_8dp"
                android:gravity="center"
                android:textColor="@color/color_blue_A400"
                android:textSize="@dimen/padding_margin_16dp"
                android:id="@+id/btn_ok"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>